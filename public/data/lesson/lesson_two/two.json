          {
            "case": "Locative (सप्तमी)",
            "function": "Indicates location, where something is.",
            "example": "तस्मिन पुस्तकं अस्ति (There is a book in him)."
          },
          {
            "case": "Vocative (स्मरण)",
            "function": "Used for calling or addressing someone directly.",
            "example": "हे सः! (O he!)."
          }
        ]
