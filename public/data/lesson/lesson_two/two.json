          {
            "case": "Instrumental (तृतीया)",
            "function": "Indicates the means or instrument by which an action is performed.",
            "example": "तेन पठति (He reads by him)."
          },
          {
            "case": "Dative (चतुर्थी)",
            "function": "Indicates the indirect object, to or for whom something is done.",
            "example": "तस्मै पठति (He reads for him)."
          },
          {
            "case": "Ablative (पञ्चमी)",
            "function": "Indicates separation or source, from whom or from where something is done.",
            "example": "तस्मात् पठति (He reads from him)."
          },
          {
            "case": "Genitive (षष्ठी)",
            "function": "Indicates possession or 'of'.",
            "example": "तस्य पुस्तकं (His book)."
