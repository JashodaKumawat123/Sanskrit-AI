        {
          "case": "Nominative (प्रथमा)",
          "function": "Used for the subject of the sentence.",
          "example": "रामः पठति (Rama reads)."
        },
        {
          "case": "Accusative (द्वितीया)",
          "function": "Used for the object of the sentence.",
          "example": "रामं पठति (He reads Rama)."
        },
        {
          "case": "Instrumental (तृतीया)",
          "function": "Indicates the means or instrument by which an action is performed.",
          "example": "रामेण पठति (He reads by Rama)."
        },
        {
          "case": "Dative (चतुर्थी)",
          "function": "Indicates the indirect object, to or for whom something is done.",
          "example": "रामाय पठति (He reads for Rama)."
        },
        {
          "case": "Ablative (पञ्चमी)",
          "function": "Indicates separation or source, from whom or from where something is done.",
          "example": "रामात् पठति (He reads from Rama)."
        },
        {
          "case": "Genitive (षष्ठी)",
          "function": "Indicates possession or 'of'.",
          "example": "रामस्य पुस्तकं (Rama's book)."
        },
        {
          "case": "Locative (सप्तमी)",
          "function": "Indicates location, where something is.",
          "example": "रामे पुस्तकं अस्ति (There is a book in Rama)."
        },
        {
          "case": "Vocative (स्मरण)",
          "function": "Used for calling or addressing someone directly.",
          "example": "हे राम! (O Rama!)."
        }
